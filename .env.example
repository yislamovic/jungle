# Rails Secret Key Base (CHANGE THIS!)
# Generate a new one with: docker run --rm ruby:3.1-slim ruby -e "require 'securerandom'; puts SecureRandom.hex(64)"
SECRET_KEY_BASE=f03d716cb26cb1de3b8c9c8e0c69b1deb8373a2793a94dda709bf94adcd2422215bc8570aafefabaec370125c375a168af97d48a28fd749b50927ecae1626058

# Stripe API Keys (get from https://dashboard.stripe.com/test/apikeys)
# Use test keys (pk_test_* and sk_test_*) for demo/testing
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE

# Admin Authentication
# These are used for HTTP Basic Auth on /admin routes
HTTP_BASIC_USER=admin
HTTP_BASIC_PASSWORD=change_this_password
