<div class="cart-item-card">
  <div class="cart-item-image">
    <% if product.image_filename.present? %>
      <img src="<%= product.image_url %>" alt="<%= product.name %>" class="item-img">
    <% else %>
      <div class="item-img-placeholder">
        <%= fa_icon "image" %>
      </div>
    <% end %>
  </div>

  <div class="cart-item-details">
    <h4 class="item-name"><%= product.name %></h4>
    <p class="item-description"><%= truncate(product.description, length: 100) %></p>
    <div class="item-price-unit">
      <%= number_to_currency(product.price) %> each
    </div>
  </div>

  <div class="cart-item-quantity">
    <label class="quantity-label">Quantity</label>
    <div class="quantity-controls">
      <%= button_to remove_item_cart_path(product_id: product.id), class: 'qty-btn qty-decrease', method: :post do %>
        <%= fa_icon "minus" %>
      <% end %>
      <span class="qty-display"><%= quantity %></span>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'qty-btn qty-increase', method: :post do %>
        <%= fa_icon "plus" %>
      <% end %>
    </div>
  </div>

  <div class="cart-item-total">
    <label class="total-label">Total</label>
    <div class="item-total-price">
      <%= number_to_currency(product.price * quantity) %>
    </div>
  </div>
</div>

<style>
.cart-item-card {
  display: grid;
  grid-template-columns: 100px 1fr auto auto;
  gap: 24px;
  padding: 24px;
  background: #fafafa;
  border-radius: 12px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  align-items: center;
}

.cart-item-card:hover {
  border-color: #dc2626;
  background: white;
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.1);
}

.cart-item-image {
  .item-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .item-img-placeholder {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #e5e7eb, #d1d5db);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
    font-size: 32px;
  }
}

.cart-item-details {
  min-width: 0;

  .item-name {
    font-size: 18px;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 8px;
  }

  .item-description {
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 12px;
    line-height: 1.5;
  }

  .item-price-unit {
    font-size: 15px;
    font-weight: 600;
    color: #4b5563;
  }
}

.cart-item-quantity {
  text-align: center;

  .quantity-label {
    display: block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #6b7280;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 8px;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 10px;
    padding: 4px;
  }

  .qty-btn {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: none;
    background: #fafafa;
    color: #dc2626;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;

    &:hover {
      background: #dc2626;
      color: white;
      transform: scale(1.1);
    }

    &:active {
      transform: scale(0.95);
    }
  }

  .qty-display {
    min-width: 40px;
    text-align: center;
    font-size: 18px;
    font-weight: 700;
    color: #1f2937;
  }
}

.cart-item-total {
  text-align: right;

  .total-label {
    display: block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #6b7280;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .item-total-price {
    font-size: 24px;
    font-weight: 900;
    color: #dc2626;
  }
}

@media (max-width: 768px) {
  .cart-item-card {
    grid-template-columns: 80px 1fr;
    gap: 16px;
  }

  .cart-item-image {
    .item-img,
    .item-img-placeholder {
      width: 80px;
      height: 80px;
    }
  }

  .cart-item-quantity {
    grid-column: 1 / -1;
  }

  .cart-item-total {
    grid-column: 1 / -1;
    text-align: left;
    padding-top: 16px;
    border-top: 2px solid #e5e7eb;
  }

  .cart-item-details {
    .item-description {
      display: none;
    }
  }
}
</style>
