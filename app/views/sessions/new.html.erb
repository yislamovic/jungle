<header class="page-header">
  <h1>Login &raquo; Sign In!</h1>
</header>
<div class='well'>
  
  <%= form_tag '/login' do %>

    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>
    <% end %>
  <p>
    <%= link_to 'Dont have an account? Register here!', '/signup' %>
  </p>
</div>