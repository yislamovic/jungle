  border-radius: 16px;
  overflow: hidden;
  background: #f3f4f6;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.product-image-main {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.5s ease;
}

.product-image-container:hover .product-image-main {
  transform: scale(1.05);
}

.product-placeholder-modern {
  width: 100%;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
