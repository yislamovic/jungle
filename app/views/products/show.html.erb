  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(220, 38, 38, 0.95);
  color: white;
  padding: 20px 40px;
  border-radius: 12px;
  font-weight: 800;
  font-size: 28px;
  z-index: 10;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  letter-spacing: 2px;
  backdrop-filter: blur(4px);
}

.product-info-panel {
  padding-left: 24px;
  overflow: visible;
}

.product-title {
  font-size: 36px;
  font-weight: 800;
  color: #1f2937;
  margin: 0 0 24px;
  line-height: 1.2;
}

.product-price-tag {
  font-size: 48px;
  font-weight: 900;
  color: #dc2626;
  margin-bottom: 32px;
  text-shadow: 0 2px 4px rgba(220, 38, 38, 0.1);
}

.product-meta {
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 24px;
  background: #fafafa;
  border-radius: 12px;
  margin-bottom: 32px;
  border-left: 4px solid #dc2626;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 16px;
}

.meta-item .fa {
  color: #dc2626;
  width: 20px;
  font-size: 18px;
}

.meta-label {
  font-weight: 600;
  color: #6b7280;
  min-width: 80px;
}

.category-badge {
  display: inline-block;
  background: linear-gradient(135deg, #dc2626, #b91c1c);
  color: white;
  padding: 6px 16px;
  border-radius: 20px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  font-size: 14px;
}

.category-badge:hover {
  background: linear-gradient(135deg, #b91c1c, #991b1b);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  text-decoration: none;
  color: white;
}

.stock-badge {
  display: inline-block;
  padding: 6px 16px;
  border-radius: 20px;
  font-weight: 700;
  font-size: 14px;
}

.stock-badge.in-stock {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.stock-badge.low-stock {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.stock-badge.out-of-stock {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
}

.product-description {
  margin-bottom: 40px;

  h3 {
    font-size: 20px;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  p {
    font-size: 17px;
    line-height: 1.8;
    color: #4b5563;
  }
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 20px;

  .btn {
    font-weight: 700;
    border-radius: 12px;
    padding: 18px;
    font-size: 18px;
    transition: all 0.3s ease;
    border: none;
    white-space: nowrap;
    overflow: visible;

    .fa {
      margin-right: 10px;
    }
  }

  .btn-add-cart {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.3);

    &:hover:not(:disabled) {
      background: linear-gradient(135deg, #b91c1c, #991b1b);
      transform: translateY(-3px);
      box-shadow: 0 8px 24px rgba(220, 38, 38, 0.4);
    }

    &:disabled {
      background: #9ca3af;
      cursor: not-allowed;
      box-shadow: none;
    }
  }

  .btn-default {
    background: white;
    color: #dc2626;
    border: 2px solid #dc2626;

    &:hover {
      background: #dc2626;
      color: white;
      transform: translateY(-3px);
    }
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  .product-detail-modern {
    padding: 24px 16px;
  }

  .product-info-panel {
    padding-left: 0;
    margin-top: 32px;
  }

  .product-title {
    font-size: 28px;
  }

  .product-price-tag {
    font-size: 36px;
  }

  .product-placeholder-modern {
    min-height: 300px;
  }

  .product-actions .btn {
    font-size: 16px;
    padding: 14px;
  }
}
</style>
