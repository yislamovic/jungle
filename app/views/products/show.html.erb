  padding-bottom: 60px;
}

.products-show .page-header {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  box-shadow: none;
}

.products-show .page-header h1 {
  color: #1f2937;
  text-shadow: none;
}

.products-show .page-header .category-link {
  color: #dc2626;
  text-decoration: none;
  transition: color 0.3s ease;
  font-weight: 600;
}

.products-show .page-header .category-link:hover {
  color: #b91c1c;
  text-decoration: underline;
}

.breadcrumb-separator {
  margin: 0 16px;
  color: #6b7280;
}

.product-detail-modern {
  background: white;
  border-radius: 20px;
  padding: 40px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s ease-out;
  overflow: visible;
}

.product-image-container {
