<section class="products-show">
  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category, class: 'category-link' %>
      <span class="breadcrumb-separator"><%= fa_icon "angle-right" %></span>
      <%= @product.name %>
    </h1>
  </header>

  <article class="product-detail-modern">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="product-image-container">
            <% if @product.image_filename.present? %>
              <img src="<%= @product.image_url %>" class="product-image-main" alt="<%= @product.name %>">
            <% else %>
              <div class="product-placeholder-modern">
                <%= fa_icon "image", class: "placeholder-icon" %>
                <span>No Image Available</span>
              </div>
            <% end %>

            <% if @product.quantity == 0 %>
              <div class="sold-out-badge">
                <%= fa_icon "ban" %> SOLD OUT
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="product-info-panel">
            <h2 class="product-title"><%= @product.name %></h2>

            <div class="product-price-tag">
              <%= humanized_money_with_symbol @product.price %>
            </div>

            <div class="product-meta">
              <div class="meta-item">
                <%= fa_icon "tag" %>
                <span class="meta-label">Category:</span>
                <%= link_to @product.category.name, @product.category, class: 'category-badge' %>
              </div>

              <div class="meta-item">
                <%= fa_icon "cubes" %>
                <span class="meta-label">Stock:</span>
                <% if @product.quantity == 0 %>
                  <span class="stock-badge out-of-stock">Out of Stock</span>
                <% elsif @product.quantity < 5 %>
                  <span class="stock-badge low-stock"><%= @product.quantity %> remaining</span>
                <% else %>
                  <span class="stock-badge in-stock"><%= @product.quantity %> in stock</span>
                <% end %>
              </div>
            </div>

            <div class="product-description">
              <h3>Description</h3>
              <p><%= @product.description %></p>
            </div>

            <div class="product-actions">
              <% if @product.quantity == 0 %>
                <%= button_to add_item_cart_path(product_id: @product.id),
                    class: 'btn btn-primary btn-add-cart btn-lg btn-block',
                    disabled: true,
                    method: :post do %>
                  <%= fa_icon "ban" %> Out of Stock
                <% end %>
              <% else %>
                <%= button_to add_item_cart_path(product_id: @product.id),
                    class: 'btn btn-primary btn-add-cart btn-lg btn-block',
                    method: :post do %>
                  <%= fa_icon "shopping-cart" %> Add to Cart
                <% end %>
              <% end %>

              <%= link_to :back, class: 'btn btn-default btn-lg btn-block' do %>
                <%= fa_icon "arrow-left" %> Continue Shopping
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>

<style>
