# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Rails Configuration
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_rails_secret
RAILS_ENV=production

# Database Configuration
DATABASE_PASSWORD=your_secure_database_password_here

# Stripe Configuration (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Admin Authentication
HTTP_BASIC_USER=admin
HTTP_BASIC_PASSWORD=your_secure_admin_password_here

# Server Configuration (Optional)
PORT=3000
